<div class="panel panel-default">
  <div class="panel-heading">
    メッセージの一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<div class="panel panel-default">
    <div class="panel-heading">新規投稿</div>
    
<div class="panel-body"> 
<%= form_for(@message) do |f| %>
   <div class="form-group">名前:
  <%= f.text_field :name, class: "form-horizontal" %>
  </div>


   <div class="form-group">内容:
  <%= f.text_area :body, class: "form-control", :size => "8x4" %>
  </div>
  
   <div class="form-group">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
</div>
</div>